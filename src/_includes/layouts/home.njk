{% extends "layouts/base.njk" %}

    {% block main %}

      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-md-9 front-page-text">
            {{ content | safe }}
          </div>
          <div class="col-xs-12 col-md-3">
            <div class="membership-box">
